@{
    Layout = "_Layout2";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:10px;">@error</h2>
}




<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="text" id="form1Example13" name="username" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example13">Kullanıcı Adı</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" id="form1Example23" name="password" class="form-control form-control-lg" />
            <label class="form-label" for="form1Example23">Şifre</label>
          </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş</button>
  
          <div class="d-flex justify-content-around align-items-center mb-4">

             <a asp-area="" asp-controller="firstPage" asp-action="Index" class="btn btn-light btn-lg btn-block">Anasayfa</a> 
    
        



        </form>
      </div>
    </div>
  </div>
</section>

          <style>
              .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
          </style>
